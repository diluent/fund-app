{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "dev",
            "args": [
                "run",
                "build-dev"
            ],
            //Run On Shift+Ctrl+B
            "isBuildCommand": false,
            //Don't run when Shift+Ctrl+T
            "isTestCommand": true
        },
        {
            "taskName": "prod",
            "args": [
                "run",
                "build-prod"
            ],
            // Don't run on Shift+Ctrl+B
            "isBuildCommand": true,
            // Run on Shift+Ctrl+T
            "isTestCommand": false
        }
    ]
}